{% assign journal_paper = resume.publication.journal | default: default.publication.journal %}
{% assign conference_paper = resume.publication.conference | default: default.publication.conference %}

<h2 id="publication">{{ text_section.publication }}</h2>

<h3 id="master_thesis">{{ text_section.master_thesis }}</h3>
<ul>
    <li>
        {{ resume.publication.master_thesis.title[page.language] | default: resume.publication.master_thesis.title["default"] }}
        {% if resume.publication.master_thesis.link %} [<a href="{{resume.publication.master_thesis.link}}">{{resume.publication.master_thesis.link}}</a>] {% endif %}
    </li>
</ul>

<h3 id="journal_paper">{{ text_section.journal_paper }}</h3>
<ol>
{% for paper in journal_paper %}
    <li>
        {{ paper.author }}, "{{ paper.title}}," <i>{{ paper.publication }}</i>. 
        {% if paper.note %} ({{ paper.note }}) {% endif %}
        {% if paper.importance %} ({{ paper.importance }}) {% endif %}
        {% if paper.doi %} [<a href="https://doi.org/{{paper.doi}}">{{paper.doi}}</a>] {% endif %}
    </li>
{% endfor %}
</ol>

<h3 id="conference_paper">{{ text_section.conference_paper }}</h3>
<ol>
{% for paper in conference_paper%}
    <li>
        {{ paper.author }}, "{{ paper.title}}," <i>{{ paper.publication }}</i>. 
        {% if paper.note %} ({{ paper.note }}) {% endif %}
        {% if paper.importance %} ({{ paper.importance }}) {% endif %}
    </li>
{% endfor %}
</ol>