---
layout: default
---

{% assign resume = site.data.resume %}
{% assign text_section = site.data.text.section[page.language] %}
{% assign text_plain = site.data.text.plain[page.language] %}

{% capture emphasize-name %}
    {% comment %}{% include emphasize.html %}{% endcomment %}
{% endcapture %}

<div class="container">
    <ul style="list-style-type:none">
        <li>email: <a href="mailto:{{ resume.email }}">{{ resume.email }}</a></li>    
    </ul>
</div>
    
<div class="container">    
    <p>
        {{ page.description }}
    </p>
</div>

{% for block in page.resume_blocks %}
    {% if block.first %}
    <div class="container">
        <div class="card my-4">
            <div class="card-header">
                <h2 id="sec-{{block.first}}">{{text_section[block.first]}}</h2>
            </div>
            <div class="card-body p-2">
            {% include cv/{{block.first}}.liquid %}
            </div>
        </div>
    </div>
    {% else %}
    <div class="container">
        <div class="card my-4">
            <div class="card-header">
                <h2 id="sec-{{block}}">{{text_section[block]}}</h2>
            </div>
            <div class="card-body p-2">
            {% include cv/{{block}}.liquid %}
            </div>
        </div>
    </div>
    {% endif %}
{% endfor %}


{{ content }}
